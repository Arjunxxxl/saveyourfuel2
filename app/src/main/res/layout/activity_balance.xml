<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/upload_bg"
    tools:context="com.saveyourfuel.saveyourfuel.balanceActivity">

    <include
        android:id="@+id/toolbarkok"
        layout="@layout/toolbar_main" />


    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button6"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
         />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/upload_button"
        android:textColor="#F7ECE1"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:text="Add balance/retrieve balance" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#210203"
        android:layout_marginTop="80dp"
        android:layout_alignTop="@id/button6"
        android:text="Use toggle to retrieve or add balance" />

</android.widget.RelativeLayout>
