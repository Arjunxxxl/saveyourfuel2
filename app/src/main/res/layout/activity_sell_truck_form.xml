<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.saveyourfuel.saveyourfuel.sellTruckForm">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main" />
    <ScrollView
        android:fadeScrollbars="false"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--<TextView-->

                <!--android:id="@+id/title_label"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:text="Sell a truck"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:textColor="#2e2e2e"-->
                <!--android:textSize="18dp"-->
                <!--android:layout_height="wrap_content" />-->

            <TextView
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/name_label"
                android:layout_height="wrap_content"
                android:text="Name"/>
            <EditText
                android:layout_below="@+id/name_label"
                android:layout_width="match_parent"
                android:hint="Enter your name"
                android:inputType="textPersonName"
                android:id="@+id/name"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/name"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:id="@+id/phone_label"

                android:layout_height="wrap_content"
                android:text="Phone"/>
            <EditText
                android:layout_below="@+id/phone_label"
                android:layout_width="match_parent"
                android:hint="Enter your phone no."
                android:id="@+id/phone"
                android:layout_marginLeft="30dp"
                android:inputType="phone"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:id="@+id/company_label"
                android:layout_height="wrap_content"
                android:text="Manufacturer Company"/>
            <EditText
                android:layout_below="@+id/company_label"
                android:layout_width="match_parent"
                android:hint="e.g. Mahindra"

                android:id="@+id/spare_part_name"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="35dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/spare_part_name"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:id="@+id/price_label"
                android:layout_height="wrap_content"
                android:text="Price"/>
            <EditText
                android:layout_below="@+id/price_label"
                android:layout_width="match_parent"
                android:inputType="numberDecimal"
                android:hint="e.g. 100000"

                android:id="@+id/price"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="35dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/price"
                android:layout_alignBottom="@+id/price"
                android:layout_alignEnd="@+id/price"
                android:textSize="22sp"
                android:layout_alignRight="@+id/price"
                android:text="â‚¹" />

            <View


                android:id="@+id/phone_separator"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/price"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"

                android:background="#d2d2d2" />


            <TextView
                android:layout_below="@+id/phone_separator"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:textColor="#2e2e2e"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:text="Select photo of your spare item"
                android:layout_height="wrap_content"
                android:id="@+id/textView" />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:text="Photo 1"
                android:id="@+id/textView2" />

            <RelativeLayout
                android:id="@+id/photo1_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/textView2"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"


                android:layout_weight=".28"
                android:background="@drawable/spinner_bg">

                <TextView
                    android:id="@+id/photo1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:lines="2"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="File..."
                    android:textColor="#353535" />

            </RelativeLayout>




            <View

                android:id="@+id/ic_separator"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/photo1_container"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"

                android:background="#d2d2d2" />

            <TextView
                android:layout_marginTop="20dp"

                android:id="@+id/rc_label"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ic_separator"
                android:textColor="#2e2e2e"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload RC"/>

            <RelativeLayout

                android:id="@+id/rc_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/rc_label"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"

                android:layout_weight=".28"
                android:background="@drawable/spinner_bg">

                <TextView
                    android:id="@+id/rc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="File..."
                    android:textColor="#353535" />


            </RelativeLayout>

            <View
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/rc_container"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:id="@+id/saparator"
                android:layout_marginTop="10dp"

                android:background="#d2d2d2" />

            <TextView
                android:layout_below="@+id/saparator"
                android:id="@+id/upload_document_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:text="@string/upload"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#353535"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/truck_list"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_receipt_white_24dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true" />


</RelativeLayout>
