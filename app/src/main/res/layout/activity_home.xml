<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homebg"
    android:layout_height="match_parent"
    tools:context="com.saveyourfuel.saveyourfuel.home">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main" />

    <!--<Button-->
        <!--android:id="@+id/button4"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignTop="@+id/toolbar"-->
        <!--android:layout_marginTop="60dp"-->
        <!--android:background="@drawable/round_button"-->
        <!--android:textColor="#ffffff"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:text="Sell"-->
        <!--/>-->

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/actype"
        android:contentDescription="Your profile picture"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#000000"
            android:id="@+id/user_name"
            android:textSize="20sp"
            android:text="Name"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:background="@drawable/india"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:contentDescription="India"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user_phone"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/phone_user"
        android:textSize="20sp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:id="@+id/mainViewHolder" >

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
