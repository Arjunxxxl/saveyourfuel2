<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/content"
    android:layout_height="match_parent"
    android:background="#1d7d96"
    tools:context="com.saveyourfuel.saveyourfuel.otpHandle">
    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/descriptor"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_chat_bubble_white_24dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/message"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/descriptor"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Sit back and Relax! \nwhile we verify your mobile number\n\nWait some seconds if \nyou didn't recieved an OTP."/>
        <EditText
            android:id="@+id/otp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_below="@id/message"
            android:textColor="@color/white"

            android:layout_height="wrap_content"
            android:hint="OTP"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#004E64"
            android:textColor="@color/white"
            android:id="@+id/submit"
            android:layout_below="@id/otp"
            android:layout_centerHorizontal="true"
            android:text="Submit"
            />


    </RelativeLayout>


</RelativeLayout>
