<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebg"
    tools:context="com.saveyourfuel.saveyourfuel.buyActivity">
    <include
        android:id="@+id/toolbar_buy"
        layout="@layout/toolbar_main" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rippleColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_whatshot_white_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimary"

        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/spare_button" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        app:rippleColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spare_button"
        android:src="@drawable/ic_build_white_24dp"
        android:layout_alignLeft="@+id/spare_button"
        android:layout_alignStart="@+id/spare_button"
        android:layout_marginBottom="15dp"
        android:id="@+id/load_button" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/truck_sell_button"
        app:rippleColor="@color/white"
        android:src="@drawable/ic_directions_car_white_24dp"
        android:layout_above="@+id/load_button"
        android:layout_alignLeft="@+id/load_button"
        android:layout_alignStart="@+id/load_button"
        android:layout_marginBottom="15dp" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar_buy"
        android:id="@+id/swipe_refresh"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_viewholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>



</RelativeLayout>
